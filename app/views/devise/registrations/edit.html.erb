<section class='w-full max-w-md mx-auto my-8'>
  <div class='border border-gray-300 rounded-lg px-8 pt-6 pb-8'>
    <h2 class="form-title">編輯會員資料</h2>
    <hr>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>

    <div class="field">
      <%= f.label :email, "信箱" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"w-full", class:"input" %>
    </div>

    <div class="field">
      <%= f.label :name, "姓名" %><br />
      <%= f.text_field :name, autofocus: true, class:"input" %>
    </div>

    <div class="field">
      <%= f.label :tel, "電話" %><br />
      <%= f.telephone_field :tel, autofocus: true, class:"input" %>
    </div>

    <div class="field">
      <%= f.label :bank_account, "銀行帳戶" %><br />
      <%= f.text_field :bank_account, autofocus: true, class:"input" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="field">
      <%= f.label :password, "新密碼" %> <br>
      <%= f.password_field :password, autocomplete: "new-password", class:"input", placeholder:"至少6碼"%>
    <% if @minimum_password_length %><br>
      <small>無須更改密碼時，此處請留空</small>
    <% end %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, "確認新密碼"%><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"input" %>
    </div>

    <div class="field">
      <%= f.label :cover, "來張封面吧？"%><br>
      <%= f.file_field :cover %>
    </div>

    <div class="actions flex justify-center">
      <%= f.submit "更新", class: "btn btn-default" %>
    </div>

    <% end %>
</section>


