<section class='form-container'>
  <div class='form-box'>
    <h2 class='form-title'>註冊</h2>
    <hr>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
      
    <div class="field mt-2">
      <%= f.label :email, "信箱" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"input", placeholder: "信箱" %>
    </div>

    <div class="field">
      <%= f.label :name, "姓名"%><br />
      <%= f.text_field :name, autofocus: true, class:"input", placeholder: "姓名"%>
    </div>
    
    <div class="field">
      <%= f.label :gender, "性別"%><br />
      <%= f.radio_button(:gender, "male") %><span> 男 </span>
      <%= f.radio_button(:gender, "female") %><span> 女 </span>
    </div>

    <div class="field">
      <%= f.label :age, "年齡"%><br />
      <%= f.number_field :age, autofocus: true, class:"input", placeholder: "年齡" %>
    </div>

    <div class="field">
      <%= f.label :tel, "電話"%><br />
      <%= f.telephone_field :tel, autofocus: true, class:"input", placeholder: "電話" %>
    </div>

    <div class="field">
      <%= f.label :bank_account, "銀行帳戶"%><br />
      <%= f.text_field :bank_account, autofocus: true, class:"input", placeholder: "銀行帳戶" %>
    </div>

    <div class="field">
      <%= f.label :password, "密碼"%>
      <% if @minimum_password_length %>
      <em>(至少<%= @minimum_password_length %>碼)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class:"input", placeholder: "密碼" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, "確認密碼"%><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"input", placeholder: "確認密碼" %>

    </div>

    <div class="actions flex justify-center">
      <%= f.submit "提交", class: "btn btn-default" %>
    </div>
    <% end %>
  </div>
</section>

