<section class='flex justify-center mt-8'>
  <div>
    <h2 class='font-bold text-2xl text-center mb-1 text-gray-700'>Forgot your password?</h2>
    <hr>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field mt-2">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"input", placeholder:"email" %>
    </div>

    <div class="actions">
      <%= f.submit "Send me reset password instructions",  class: "btn btn-default" %>
    </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</section>
