<section class='w-full max-w-md mx-auto my-8'>
  <div class='border border-gray-300 rounded-lg px-8 pt-6 pb-8'>
    <h2 class='form-title'>會員登入</h2>
    <div class="omniauth-btn">
      <%= link_to omniauth_authorize_path(resource_name, :github), method: :post do %>
        <i class="fab fa-github align-middle text-2xl w-5/12 bg-gray-300 p-2 rounded-lg"></i>
      <% end %>
      <%= link_to omniauth_authorize_path(resource_name, :google_oauth2), method: :post do %>
        <i class="fab fa-google align-middle text-2xl w-5/12 bg-white p-2 rounded-lg" style="color:#2563EB;"></i>
      <% end %>
    </div>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field mt-2">
      <%= f.label :email, "信箱" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input" %>
    </div>

    <div class="field">
      <%= f.label :password, "密碼" %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: "input" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, "記住帳號" %>
      </div>
    <% end %>

    <div class="actions flex justify-center">
      <%= f.submit "登入", class: "btn btn-default" %>
    </div>
  <% end %>
  <%= render "devise/shared/links"%>
  </div>
</section>
