<section class='flex justify-center mt-8'>
  <div class='form-box'>
    <h2 class='form-title'>登入</h2>
    <hr>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field mt-2">
      <%= f.label :email, "信箱" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input", placeholder: "信箱" %>
    </div>

    <div class="field">
      <%= f.label :password, "密碼" %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: "input", placeholder: "密碼" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, "記住帳號" %>
      </div>
    <% end %>

    <div class="actions flex justify-center">
      <%= f.submit "登入", class: "btn btn-default" %>
    </div>
  <% end %>

  <%= render "devise/shared/links"%>
  </div>
</section>
