<h1>任務列表</h1>

<table>
  <thead>
    <tr>
      <th>任務標題</th>
      <th>任務內容</th>
      <th>任務地點</th>
      <th>店名/地點</th>
      <th>酬勞</th>
      <th>起始時間</th>
      <th>結束時間</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.brief_description %></td>
        <td><%= task.description %></td>
        <td><%= task.address %></td>
        <td><%= task.store_name %></td>
        <td><%= task.reward %></td>
        <td><%= task.task_at.to_s(:db) %></td>
        <td><%= task.task_end.to_s(:db) %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

