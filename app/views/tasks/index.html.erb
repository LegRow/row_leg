<p id="notice"><%= notice %></p>

<div class="w-1/2 mx-auto text-2xl">
  <ul id="tabs" class="inline-flex w-full px-1 pt-2">
    <li class="flex px-4 py-2 -mb-px font-black text-yellow-600 border-b-4 border-yellow-900 rounded-t opacity-95"><a
        id="default-tab"><%= link_to '新增任務' , new_task_path %></a></li>
    <li id="tab-contents" class="px-4 py-2 font-black text-yellow-600 rounded-t opacity-95"><%= link_to '發佈任務' , lists_path %></li>
    <li id="tab-contents" class="px-4 py-2 font-black text-yellow-600 rounded-t opacity-95"><%= link_to '接下任務' , works_path %></li>
    <li id="tab-contents" class="px-4 py-2 font-black text-yellow-600 rounded-t opacity-95"><%= link_to '聊天室' , rooms_path %></li>
  </ul>
</div>

<section class="task-container">
  <div class="task-row">
    <div class="task-title">
      <h2>任務列表清單</h2>
      <select name="" id="">
        <option value="">選擇排序方式</option>
        <option value="1">任務地點</option>
        <option value="2">任務時間</option>
      </select>
    </div>
    <hr />
    <% @tasks.each do |task| %>
    <div class="task-list">
      <h3 class="task-item-title">
        <a href="#"><%= task.brief_description %></a>
      </h3>
      <div class="task-inf">
        <p><span class="inf-title">店名:</span><%= task.store_name %></p>
        <p><span class="inf-title">酬勞:</span><%= task.reward %></p>
        <p><span class="inf-title">任務開始時間:</span><%= task.task_at %></p>
        <p><span class="inf-title">任務結束時間:</span><%= task.task_end %></p>
        <p><span class="inf-title">任務地點:</span><%= task.address %></p>
      </div>
      <div class="task-desc">
        <p>
          <span class="inf-title">任務內容:</span><br />
          <%= task.description %>
        </p>
      </div>
      <button class="inf-open" id="inf-open">展開</button>
      <% if employer_of task %>
        <div class="bg-blue-500 text-white font-bold py-2 px-4 rounded">
          目前此任務狀態：<%= task.state %>
          <br>
          <% if not employer_paid task %>
          <%= link_to 'Pay', controller: 'cashflow', action: 'to_newebpay',for_newebpay: {reward: task.reward, behalf: task.behalf, order_number: task.order.merchant_order_number} %>
          <% end %>
        </div>
        <div class="text-right mt-2 pr-3">
          <%= link_to '點我看任務詳情 →', task, class: "link-spec" %>
        </div>
        <div class="task-edit-link">
          <%= link_to '編輯', edit_task_path(task), class: 'btn btn-edit' %>
          <%= link_to '刪除任務', task, class: 'btn btn-destroy', method: :delete, data: { confirm: 'Are you sure?' } %>
        </div>
      <% else %>
        <div class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
          <%= link_to '應徵', task %>
          <br>
          <% if employer_confirmed task %>
          <%= link_to '支付押金', controller: 'cashflow', action: 'to_newebpay',for_newebpay: {reward: (task.reward * 0.2).to_i, behalf: task.behalf, order_number: task.order.merchant_order_number + "B"} %>
          <% end %>
        </div>
        <div class="text-right mt-2 pr-3">
          <%= link_to '點我看任務詳情 →', task, class: "link-spec" %>
        </div>
      <% end %>
    </div>
    <% end %>
  </div>
</section>

<br />
