<p id="notice"><%= notice %></p>

<section class="task-show-container" id = "<%= "task_" + @task.id.to_s %>" data-employee-id="<%= @task.employee_id %>" data-employer-id="<%= @task.user_id %>" data-current-user="<%= current_user.id %>">
  <div class="task-show-row">
    <div class="task-show-title">
      <h2>任務詳情</h2>
    </div>
    <div class="task-show-box">
      <div class="task-show-inf">
        <p class="text-3xl">
          <strong>任務名稱：</strong><%= @task.brief_description %>
        </p>
        <p><strong>任務內容：</strong><br /><%= @task.description %></p>
        <p><i class="fas fa-store text-xl"></i><%= @task.store_name %></p>
        <p><i class="fas fa-map-marked-alt text-xl"></i><%= @task.address %></p>
        <p><i class="fas fa-hand-holding-usd text-xl"></i><%= "新台幣#{@task.reward}" %></p>
        <p><i class="fas fa-dollar-sign text-xl"></i><%= "新台幣#{@task.behalf}" %></p>
        <p><i class="fas fa-plane-departure text-xl"></i><%= @task.task_at %></p>
        <p><i class="fas fa-plane-arrival text-xl"></i><%= @task.task_end %></p>
        <p><i class="fas fa-comment-alt text-xl"></i><%= @task.remarks %></p>
        <div class="task-show-link">
          <% if employer_of @task %>
          <div>
            <%= link_to '編輯', edit_task_path(@task), class: "btn-text my-2" %>
          </div>
          <div>
            <%= link_to '回到任務列', tasks_path, class: "btn-text my-2" %>
          </div>
          <% else %>
          <div>
            <% if current_user.id == @task.user_id %>
            <%= link_to '編輯', edit_task_path(@task), class: "btn-text my-2" %> |<% end %>
            <%= link_to '回到任務列', tasks_path, class: "btn-text my-2" %>
          </div>
          <div>
            <% if employee_of @task %>
              <%= button_tag '回報位置', id: "report_location" %>
            <% elsif not_employer_of @task %>
              <%= link_to '應徵', controller: "tasks", action: "send_applicant_apply_email",
                  apply_information: {applicant_id: current_user, employer_id: @task.user_id ,task_id: @task.id, task_tate: @task.state} %>
            <% end %>
          </div>
          <% end %>
        </div>
      </div>
      <div id="maparea" class="task-show-map"></div>
      <div id="employee" class="task-show-map"></div>
    </div>
  </div>
</section>
