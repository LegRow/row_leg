<section class="task-show-container" id = "<%= "task_" + @task.id.to_s %>" data-employee-id="<%= @task.employee_id %>" data-employer-id="<%= @task.user_id %>" data-current-user="<%= current_user.id %>">
  <div class="task-show-row" data-controller="map">
    <div class="font-bold py-2 px-4 rounded flex items-center">
      <h2 data-controller="store" class="w-1/2 text-5xl text-yellow-900" ><i class="fas fa-thumbtack"></i>任務詳情</h2>
      <h4 class="map-progress w-1/2 animate-pulse text-red-500" id="map-progress"></h4>
    </div>
    <div class="task-show-box">
      <div class="task-show-inf">
        <p class="text-2xl">
          <strong>任務名稱：</strong><%= @task.brief_description %>
        </p>
        <p class="text-lg"><strong>任務內容：</strong><br /><%= @task.description %></p>
        <p class="text-lg font-bold"><i class="fas fa-store mr-1"></i>商店名：<%= @task.store_name %></p>
        <p class="text-lg font-bold"><i class="fas fa-map-marker-alt mr-1"></i>地址：<%= @task.address %></p>
        <p class="text-lg font-bold"><i class="fas fa-coins text-lg mr-1 "></i>酬勞：<%= "$#{@task.reward} NT" %> &
          <i class="fas fa-hand-holding-usd text-lg"></i><%= "#{@task.behalf}NT（代墊金額）" %>
        </p>
        <p class="text-lg font-bold"><i class="fas fa-hourglass-start text-lg mr-1"></i>起始：<%= @task.task_at&.strftime('%Y-%m-%d %H:%M:%S') %></p>
        <p class="text-lg font-bold"><i class="fas fa-hourglass-end text-lg mr-1"></i>結束：<%= @task.task_end&.strftime('%Y-%m-%d %H:%M:%S') %></p>
        <p><i class="fas fa-comment-alt text-xl"></i> <%= @task.remarks %></p>
        <div class="">
          <div class= "pt-4">
            <%= link_to '返回', tasks_path, class: "task-show-btn" %>
          <% if employer_of @task %>
            <%= link_to '編輯', edit_task_path(@task), class: "task-show-btn" %>
            <%= link_to 'qrcode', qrcode_show_task_path(@task), class: "task-show-btn" %>
          </div>
          <div>
          <% else %>
            <% if employee_of @task %>
              <%= button_tag type: 'submit', class: "report-btn task-show-btn", id: "report_location" do %>
              <i class="far fa-hand-point-down text-xl mr-1"></i>回報位置
              <% end %>
            <% elsif not_employer_of(@task) && @task.employer_paid? %>
              <%= link_to '應徵', send_applicant_apply_email_task_url(applicant_id: current_user, employer_id: @task.user_id ,task_id: @task.id, task_tate: @task.state), class: "task-show-btn apply-btn" %>
            <% end %>
          <% end %>
          </div>
        </div>
      </div>
      <div id="employee" class="sm: lg:px-5 py-5 border-2 w-9/12" data-lat="<%= @task.latitude %>" data-lng="<%= @task.longitude %>" data-store-target="output">
      </div>
    </div>
  </div>
</section>
