<p id="notice"><%= notice %></p>
<section class="task-show-container" id = "<%= "task_" + @task.id.to_s %>" data-employee-id="<%= @task.employee_id %>" data-employer-id="<%= @task.user_id %>" data-current-user="<%= current_user %>">
  <div class="task-show-row">
    <div class="task-show-title">
      <h2>任務詳情</h2>
    </div>
    <div class="task-show-box">
      <div class="task-show-inf">
        <p class="text-2xl">
          <strong>任務:</strong><%= @task.brief_description %>
        </p>
        <p><strong>任務內容:</strong><br /><%= @task.description %></p>
        <p><strong>地址:</strong><%= @task.address %></p>
        <p><strong>店名/位置:</strong><%= @task.store_name %></p>
        <p><strong>酬勞:</strong><%= "新台幣#{@task.reward}" %></p>
        <p><strong>代墊費用:</strong><%= "新台幣#{@task.behalf}" %></p>
        <p><strong>開始時間:</strong><%= @task.task_at&.strftime('%Y-%m-%d%H:%M:%S') %></p>
        <p><strong>結束時間:</strong><%= @task.task_end&.strftime('%Y-%m-%d%H:%M:%S') %></p>
        <p><strong>備註:</strong><%= @task.remarks %></p>
        <div class="task-show-link">
          <div>
            <%= link_to '返回', tasks_path, class: "btn-text my-2" %>
          </div>
          <% if employer_of @task %>
          <div>
            <%= link_to '編輯', edit_task_path(@task), class: "btn-text my-2" %>
          </div>
          <% else %>
          <div>
            <% if employee_of @task %>
              <%= button_tag '回報位置', id: "report_location" %>
            <% elsif not_employer_of(@task) && @task.employer_paid? %>
              <%= link_to('應徵', send_applicant_apply_email_task_url(apply_information: {applicant_id: current_user, employer_id: @task.user_id ,task_id: @task.id, task_tate: @task.state}), class: "btn-text my-2") %>
            <% end %>
          </div>
          <% end %>
        </div>
      </div>
      <div id="maparea" class="task-show-map"></div>
      <div id="employee" class="task-show-map"></div>
    </div>
  </div>
</section>
