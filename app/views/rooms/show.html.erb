<div class="w-10/12 m-auto border-4 border-green-500 bg-green-200 rounded-md">
<%# 第一區塊 聊天室資訊  請注意不要把下面的data-controller="chat"刪掉 %>
  <div data-controller="chat" class="flex items-center bg-green-400">

    <% if row_leg_room %>
      <div class="w-8/12 animate-pulse bg-green-300 text-xl p-1 rounded">
        這是您的跑腿任務：<%= "位於#{@room.task.store_name}" %><br>
        請於：<%= "#{@room.task.task_at&.strftime('%m月%d日%H:%M')} 前到達執行任務" %>
      </div>
    <% end%>
    <% if user_room %>
      <div class="w-8/12 animate-pulse bg-blue-400 text-xl p-1">
        這是您發布的任務：<%= "#{@room.task.store_name}" %><br>
        請於：<%= "#{@room.task.task_end&.strftime('%m-%d/%H:%M')} 前到達交接" %>
      </div>
    <% end%>
    <div class="w-3/12 inline-block text-center text-2xl m-px hover:opacity-60 ">
      <%= @room.user.uniq.count %>位成員
    </div>
      <div class="flex-grow text-center">
        <%= link_to "返回", rooms_path, class: 'inline-block text-center text-3xl m-px hover:opacity-60' %>
      </div>
  </div>
<%# 第二區塊 %>
  <div calss="m-auto w-10/12">
    <div id="messages" class="h-96 flex-col flex overflow-auto" data-room-id="<%= @room.id %>" data-user-id="<%= current_user.id %>">
      <% @room.messages.each do |message| %>
        <%= render 'messages/message', message: message %>
      <% end %>
    </div>
    <hr>
    <div class="">
      <%= render 'messages/form', message: Message.new, room: @room %>
    </div>
  </div>
</div>
